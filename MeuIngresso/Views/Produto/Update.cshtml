@model Produto

<form asp-controller="Produto" asp-action="Update" method="POST">
    <h2>Atualizar Produto </h2>
    <br />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao"></span>
    </div>

    <div class="form-group">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control" />
        <span asp-validation-for="Valor"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoDeShow"></label>
        <input asp-for="TipoDeShow" class="form-control" />
        <span asp-validation-for="TipoDeShow"></span>
    </div>

    <button class="btn btn-primary">Atualizar</button>

</form>